    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "chart.js": "^2.7.3",
    "express": "^4.16.4",
    "if-env": "^1.0.4",
    "path": "^0.12.7",
    "react-chartjs-2": "^2.7.4",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  }
}
